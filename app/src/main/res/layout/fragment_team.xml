<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black">

    <!-- Your normal Team content area (placeholder) -->
    <TextView
        android:id="@+id/teamContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/team_screen_content"
        android:textColor="@android:color/white"
        android:layout_margin="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Floating “i” info button (always visible, top-right, below toolbar) -->
    <ImageButton
        android:id="@+id/btnInfo"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:background="@android:color/transparent"
        android:backgroundTint="@color/hq_purple"
        android:clickable="true"
        android:contentDescription="@string/about"
        android:elevation="8dp"
        android:focusable="true"
        android:padding="8dp"
        android:src="@drawable/ic_info"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@android:color/white"
        tools:ignore="TouchTargetSizeCheck" />

    <!-- ABOUT OVERLAY (hidden by default) -->
    <ScrollView
        android:id="@+id/aboutOverlay"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#151515"
        android:padding="16dp"
        android:visibility="gone"
        android:elevation="6dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Top purple bar title (to match your style) -->
            <TextView
                android:id="@+id/aboutTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/about_"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="@android:color/white"
                android:background="@color/hq_purple"
                android:padding="8dp" />

            <!-- App heading in teal -->
            <TextView
                android:id="@+id/appName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/hunt_quest"
                android:textStyle="bold"
                android:textSize="28sp"
                android:textColor="@color/hq_teal"
                android:paddingTop="12dp"
                android:paddingBottom="8dp" />

            <!-- Body text -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:lineSpacingExtra="2dp"
                android:text="@string/course_comp_3074_ngroup_group_20_n_nteam_members_n_gia_nagpal_101508691_n_nirja_arun_dabhi_101509539_n_danuja_shankar_101510577_n_rishamanoor_kaur_101508552" />
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
