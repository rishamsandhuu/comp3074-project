<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Top App Bar -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/topAppBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:title="@string/directions_"
        app:navigationIcon="@drawable/huntquest_arrow_back"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Map placeholder (replace with MapFragment later) -->
    <FrameLayout
        android:id="@+id/mapContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#cccccc"
        app:layout_constraintTop_toBottomOf="@id/topAppBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintDimensionRatio="16:9"
        tools:ignore="VisualLintBounds" />

    <!-- Mode chips (Driving / Walking only) -->
    <com.google.android.material.chip.ChipGroup
        android:id="@+id/chipGroupModes"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="8dp"
        app:singleSelection="true"
        app:layout_constraintTop_toBottomOf="@id/mapContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="VisualLintBounds">

        <com.google.android.material.chip.Chip
            android:id="@+id/chipDriving"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:text="@string/driving"
            android:checked="true"/>

        <com.google.android.material.chip.Chip
            android:id="@+id/chipWalking"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:text="@string/walking"/>
    </com.google.android.material.chip.ChipGroup>

    <!-- Summary card -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardSummary"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        app:layout_constraintTop_toBottomOf="@id/chipGroupModes"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="VisualLintBounds">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/txtRouteInfo"
                android:text="@string/eta_12_min_4_8_km"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnStart"
                android:text="@string/start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Footer button -->

</androidx.constraintlayout.widget.ConstraintLayout>
