<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="12dp"
    android:layout_marginTop="8dp"
    app:cardBackgroundColor="@android:color/black"
    app:strokeColor="#2BD4C0"
    app:strokeWidth="1dp"
    app:cardCornerRadius="14dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center_vertical">

        <!-- Avatar initials -->
        <TextView
            android:id="@+id/txtAvatar"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:backgroundTint="@color/hq_avatar_bg"
            android:background="@drawable/ic_avatar_circle" />

        <Space android:layout_width="12dp" android:layout_height="0dp"/>

        <!-- Name + icons -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                android:maxLines="1"
                android:ellipsize="end"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="6dp">

                <ImageButton
                    android:id="@+id/btnPhone"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:background="@android:color/transparent"
                    android:contentDescription="Phone"
                    android:src="@drawable/ic_phone"
                    app:tint="@android:color/white" />

                <ImageButton
                    android:id="@+id/btnEmail"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:background="@android:color/transparent"
                    android:contentDescription="Email"
                    android:src="@drawable/ic_email"
                    app:tint="@android:color/white" />
            </LinearLayout>
        </LinearLayout>

        <!-- Edit / Remove -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnEdit"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:minWidth="0dp"
                android:paddingHorizontal="16dp"
                android:text="Edit"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                app:backgroundTint="@color/hq_purple"
                app:cornerRadius="16dp"/>

            <Space android:layout_width="8dp" android:layout_height="0dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnRemove"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:minWidth="0dp"
                android:paddingHorizontal="16dp"
                android:text="Remove"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                app:backgroundTint="@color/hq_purple"
                app:cornerRadius="16dp"/>
        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
