<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/hq_nav_bg"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Header -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/hq_purple"
            android:padding="16dp">

            <TextView
                android:id="@+id/section_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/share_task"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:textSize="20sp"
                tools:ignore="RelativeOverlap" />

            <ImageButton
                android:id="@+id/menu_button"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_alignParentEnd="true"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@android:drawable/ic_menu_share"
                android:contentDescription="@string/share_icon"
                app:tint="@android:color/white" />

        </RelativeLayout>

        <!-- Task Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#222"
            android:padding="20dp"
            android:layout_marginTop="20dp">

            <TextView
                android:id="@+id/tvName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/hq_nav_text_unselected"
                android:textSize="13sp"
                android:layout_marginTop="6dp" />

            <TextView
                android:id="@+id/tvTask"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:layout_marginTop="8dp" />

            <TextView
                android:id="@+id/tvTags"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/hq_teal"
                android:textSize="13sp"
                android:layout_marginTop="8dp" />
        </LinearLayout>

        <!-- Share options -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/share_via"
            android:textColor="@color/hq_teal"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginTop="16dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageButton
                android:id="@+id/btnFacebook"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:src="@drawable/ic_facebook"
                android:backgroundTint="@color/hq_teal"
                android:background="@drawable/rounded_icon_bg"
                android:padding="12dp"
                android:contentDescription="@string/share_facebook" />

            <ImageButton
                android:id="@+id/btnInstagram"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_marginStart="12dp"
                android:src="@drawable/ic_instagram"
                android:backgroundTint="@color/hq_pink"
                android:background="@drawable/rounded_icon_bg"
                android:padding="12dp"
                android:contentDescription="@string/share_instagram" />

            <ImageButton
                android:id="@+id/btnTwitter"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_marginStart="12dp"
                android:src="@drawable/ic_twitter"
                android:backgroundTint="@color/hq_purple"
                android:background="@drawable/rounded_icon_bg"
                android:padding="12dp"
                android:contentDescription="@string/share_twitter" />

            <ImageButton
                android:id="@+id/btnEmail"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_marginStart="12dp"
                android:src="@drawable/ic_email"
                android:backgroundTint="@color/hq_teal"
                android:background="@drawable/rounded_icon_bg"
                android:padding="12dp"
                android:contentDescription="@string/share_email" />
        </LinearLayout>


        <!-- Close button -->
        <Button
            android:id="@+id/back_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/close"
            android:textAllCaps="true"
            android:textColor="@android:color/white"
            android:backgroundTint="@color/hq_purple"
            android:layout_marginTop="24dp" />
    </LinearLayout>
</ScrollView>
