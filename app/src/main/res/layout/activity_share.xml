<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/hq_nav_bg"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- ▓▓ Header ▓▓ -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/hq_purple"
            android:padding="16dp"
            android:elevation="4dp">

            <TextView
                android:id="@+id/section_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Share Task"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:textSize="20sp"
                android:fontFamily="@font/press_start_2p" />

            <ImageButton
                android:id="@+id/menu_button"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_alignParentEnd="true"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@android:drawable/ic_menu_share"
                android:contentDescription="Share menu"
                app:tint="@android:color/white" />
        </RelativeLayout>

        <!-- ▓▓ Task Card ▓▓ -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#222222"
            android:padding="20dp"
            android:layout_marginTop="24dp"
            android:elevation="2dp"
            android:clipToOutline="true">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Name: Old City Library"
                android:textColor="@android:color/white"
                android:textSize="14sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Address: 123 King St W, Toronto, ON M5H 1A1"
                android:textColor="@color/hq_nav_text_unselected"
                android:textSize="13sp"
                android:layout_marginTop="6dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Task: Find the year this building was constructed."
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:layout_marginTop="8dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="#info"
                    android:textColor="@color/hq_teal"
                    android:textSize="13sp"
                    android:layout_marginEnd="8dp"
                    android:fontFamily="@font/press_start_2p" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="#easy"
                    android:textColor="@color/hq_teal"
                    android:textSize="13sp"
                    android:layout_marginEnd="8dp"
                    android:fontFamily="@font/press_start_2p" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="#historic"
                    android:textColor="@color/hq_teal"
                    android:textSize="13sp"
                    android:fontFamily="@font/press_start_2p" />
            </LinearLayout>
        </LinearLayout>

        <!-- ▓▓ Share Section ▓▓ -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Share via"
            android:textColor="@color/hq_teal"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/press_start_2p" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_margin="8dp"
                android:backgroundTint="@color/hq_teal"
                android:text="F"
                android:textColor="@android:color/white"
                android:fontFamily="sans-serif-medium" />

            <Button
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_margin="8dp"
                android:backgroundTint="@color/hq_pink"
                android:text="I"
                android:textColor="@android:color/white"
                android:fontFamily="sans-serif-medium" />

            <Button
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_margin="8dp"
                android:backgroundTint="@color/hq_purple"
                android:text="T"
                android:textColor="@android:color/white"
                android:fontFamily="sans-serif-medium" />

            <Button
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_margin="8dp"
                android:backgroundTint="@color/hq_teal"
                android:text="E"
                android:textColor="@android:color/white"
                android:fontFamily="sans-serif-medium" />
        </LinearLayout>

        <!-- ▓▓ Close Button ▓▓ -->
        <Button
            android:id="@+id/back_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CLOSE"
            android:textAllCaps="true"
            android:textColor="@android:color/white"
            android:backgroundTint="@color/hq_purple"
            android:layout_marginTop="24dp"
            android:paddingVertical="16dp"
            android:fontFamily="@font/press_start_2p"
            android:elevation="4dp" />
    </LinearLayout>
</ScrollView>
